  <!--Modal Carpeta-->
  <div class="modal fade" id="modalCarpeta" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="myModalLabel">Crea una carpeta</h4>
          
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <input class="form-control" type="text" placeholder="Nombre de la carpeta" id="nombreCarpeta">
          <div id="div-error-nombreCarpeta" class="mensaje-error">*Campo obligatorio</div>
          </div>
        <div class="modal-footer">
          <button class="btn btn-primary" onclick="crearCarpeta()">Crear</button>
        </div>
    </div>
  </div>
  </div>

   <!--Modal Proyecto-->
   <div class="modal fade" id="modalProyecto" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="myModalLabel">Crea un proyecto</h4>
          
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <select class="form-control" id="select-carpeta">
            <option value="0">--Seleccione su carpeta--</option>
            <option value="1">Carpeta 1 </option>
            <option value="2">Carpeta 2 </option>
            <option value="3">Carpeta 3 </option>
            <option value="4">Carpeta 4 </option>
            <option value="5">Carpeta 5 </option>
            <option value="6">Carpeta 6 </option>
            <option value="...">Carpeta ... </option>

          </select>
        </div>
        <div class="modal-body">
          <input class="form-control" id="nombreProyecto" type="text" placeholder="Nombre del proyecto">
          <div id="div-error-nombreProyecto" class="mensaje-error">*Campo obligatorio</div>
        </div>
        
        
        <div class="modal-footer">
          <button class="btn btn-primary" onclick="crearProyecto()">Crear</button>
        </div>
      </div>
    </div>
  </div>
