<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">
    <% include partials/slidebar %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <% include partials/navbar %>

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Content Row -->
          <div class="row">

            <section>
              <div class="container">
                <div class="row align-items-center">
                  <div class="col-lg-6 order-lg-2">
                    <div class="p-5">
                      <img class="img-fluid rounded-circle" src="img/carpeta.jpg" alt="">
                    </div>
                  </div>
                  <div class="col-lg-6 order-lg-1">
                    <div class="p-5">
                      <h2 class="display-4">Crea una nueva carpeta</h2>
                      <p></p>
                      <button class="btn btn-primary" data-toggle="modal" data-target="#modalCarpeta">Crear</button>
                    </div>
                  </div>
                </div>
              </div>
            </section>
          
            <section>
              <div class="container">
                <div class="row align-items-center">
                  <div class="col-lg-6">
                    <div class="p-5">
                      <img class="img-fluid rounded-circle" src="img/proyecto.jpg" alt="">
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="p-5">
                      <h2 class="display-4">Crea un nuevo proyecto</h2>
                      <button class="btn btn-primary" data-toggle="modal" data-target="#modalProyecto">Crear</button>
                    </div>
                  </div>
                </div>
              </div>
            </section>
            

        </div>
